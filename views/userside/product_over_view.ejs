    <style>
        #maininagediv {
            position: relative;
            width: auto;
            height: auto;
            margin: 20px auto;
            overflow: hidden;
            background: #000;
            --url: url(<%= product.images[0] %>);
            --zoom-x: 0%;
            --zoom-y: 0%;
            --display: none;
        }

        #maininagediv img {
            width: 500px;
            height: 400px;
            display: block;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        #maininagediv:hover img {
            transform: scale(1.05);
        }

        #maininagediv::after {
            content: '';
            display: var(--display);
            position: absolute;
            top: 0;
            left: 0;
            width: 500px;
            height: 400px;
            background-image: var(--url);
            background-size: 200%;
            background-position: var(--zoom-x) var(--zoom-y);
            transition: opacity 0.2s;
        }

        .reiviewsecrtion {
            padding-left: 50px;
        }

        /* Enhanced Thumbnail Styling */
        .thumbnail {
            transition: transform 0.2s, border-color 0.2s;
            border: 2px solid transparent;
        }

        .thumbnail:hover {
            transform: translateY(-2px);
            border-color: #4F46E5;
        }

        /* Enhanced Rating Stars */
        .rating-stars i {
            transition: color 0.2s;
            cursor: pointer;
        }

        .rating-stars i:hover {
            color: #FFD700;
            transform: scale(1.2);
        }

        /* Product Card Hover Effects */
        .product-card {
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        /* Button Animations */
        .action-button {
            transition: transform 0.2s, background-color 0.2s;
        }

        .action-button:hover {
            transform: translateY(-2px);
        }

        /* Price Tag Styling */
        .price-tag {
            position: relative;
            display: inline-block;
            padding: 0.5rem 1rem;
            background: #4F46E5;
            color: white;
            border-radius: 4px;
        }

        .price-tag::after {
            content: '';
            position: absolute;
            right: -8px;
            top: 50%;
            transform: translateY(-50%);
            border-left: 8px solid #4F46E5;
            border-top: 8px solid transparent;
            border-bottom: 8px solid transparent;
        }
    </style>

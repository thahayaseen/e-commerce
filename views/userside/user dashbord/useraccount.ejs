<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome CSS -->
    <link href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/myprofile.css">

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>

    <style>
        .profile-header {
            background-color: #dfdfdf;
            padding: 20px;
            border-radius: 10px;
        }

        .userdtls {
            border: #1a1a1a solid 1px;
            border-radius: 10px;
            background-color: #8f8f8f;
            padding: 30px;
            padding-bottom: 95px;
        }

        .edit-button {
            position: absolute;
            top: 46px;
            right: 40px;
            border-radius: 20px;
            font-size: 14px;
        }
        .cart-count {
            position: absolute;
            top: 16px;
            right: 55px;
            background: #FF3366;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
    </style>
</head>

<body>

    <header class="bg-gradient text-white shadow">
        <nav class="navbar navbar-expand-md p-0 navbarbg">
            <div class="container-sm">
                <a class="navbar-brand fs-4 fw-bold" href="/">WeebsCorner</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar container-fluid" id="navbarNav">
                    <ul class="navbar-nav p-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/product">All Products</a>
                        </li>
                       
                    </ul>
                    <div class="d-flex">
                        <a href="/wishlist" class="btn btn-link text-white me-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                            </svg>
                        </a>
                        <a href="/user/mydash" class="btn btn-link text-white me-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                            </svg>
                        </a>
                        <a href="/cart" class="btn btn-link text-white me-2 relative">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                            </svg>
                            <% if(cartcount>=0){ %>
                                <span class="cart-count"><%= cartcount %></span>
                                <% } %>
                        </a>
                        <a onclick="logout()" class="btn btn-link text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z"/>
                                <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 my-lg-0 my-md-1">
                <%- include('./sidebar', { activePage: "myprofile" }) %>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-9 px-4 pb-4">
                <div class="userdtls position-relative">
                    <button class="btn btn-primary edit-button" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                        <i class="fas fa-edit"></i> Edit Profile
                    </button>

                    <div class="profile-header">
                        <div class="d-flex align-items-center">
                            <img src="https://cdn.pixabay.com/photo/2016/11/08/15/21/user-1808597_1280.png" alt="User Logo"
                                class="w-10 h-10 userimage rounded-circle me-3">
                            <div>
                                <h4 class="mb-1"><%= user.name %></h4>
                                <p class="text-muted mb-0">@<%= user.user_name %></p>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <p><i class="fas fa-envelope me-2"></i> <%= user.email %></p>
                            <!-- <p><i class="fas fa-map-marker-alt me-2"></i> New York, USA</p> -->
                        </div>
                        <div class="col-md-6">
                            <p><i class="fas fa-calendar me-2"></i> <%= new Date(user.createdAt).toLocaleDateString('en-GB') %></p>
                        </div>
                    </div>

                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                        Change Password
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Profile Modal -->
    <div class="modal fade" id="editProfileModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="profileedit">
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" id="ename" value="<%= user.name %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input type="text" class="form-control" value="<%= user.user_name %>" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" value="<%= user.email %>" readonly>
                        </div>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Change Password Modal -->
    <div class="modal fade" id="changePasswordModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Change Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="changepass">
                        <div class="mb-3">
                            <label class="form-label">Current Password</label>
                            <input type="password" name="oldpass" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">New Password</label>
                            <input type="password" name="newpass" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Confirm New Password</label>
                            <input type="password" name="newpass2" class="form-control">
                        </div>
                      
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Change Password</button>
                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function logout(){
        Swal.fire({
      title: 'Are you sure?',
      text: "You will be logged out!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, logout'
    }).then((result) => {
      if (result.isConfirmed) {
        
        window.location.href = '/logout'; // Adjust the URL as needed
      }
    });
            
        }
    </script>
    <script>
        const changepass=document.getElementById('changepass')
        const form = document.getElementById('profileedit');
        form.addEventListener('submit', (e) => {
            e.preventDefault();
            const ename = document.getElementById('ename').value.trim()
if(ename==''){
      Swal.fire({
        icon: 'error',
        title: 'Missing Field',
        text: 'Please enter your name.',
        background: '#fff3cd',
        color: '#856404',
        iconColor: '#856404',
        confirmButtonText: 'Okay',
        confirmButtonColor: '#ffc107',
        customClass: {
            popup: 'rounded-lg',
        },
    });
    return 
}
            fetch('/userupdate', {
    method: 'PATCH',
    headers: {
        'Content-Type': 'application/json',
    },
    body: JSON.stringify({ ename }),
})
.then(res => res.json())
.then(res => {
    if (res.success) {

        Swal.fire('The name has been successfully changed').then((result) => {
            if (result.isConfirmed) { 
                const modalElement = document.getElementById('editProfileModal');
                const modalInstance = bootstrap.Modal.getInstance(modalElement);
                modalInstance.hide(); 

              
                window.location.reload(true);
            }
        });
    }
})
.catch(error => {
    console.error('Error updating the user:', error);
    Swal.fire('An error occurred while updating the name.'); // Handle error with SweetAlert
});

        });
        changepass.addEventListener('submit', (e) => {
        e.preventDefault(); // Prevent the default form submission

        // Get the form values
        const currentPassword = changepass.oldpass.value.trim();
        const newPassword = changepass.newpass.value.trim();
        const confirmPassword = changepass.newpass2.value.trim();

       
   if (!currentPassword) {
    Swal.fire({
        icon: 'warning',
        title: 'Missing Field',
        text: 'Please enter your current password.',
        background: '#fff3cd',
        color: '#856404',
        iconColor: '#856404',
        confirmButtonText: 'Okay',
        confirmButtonColor: '#ffc107',
        customClass: {
            popup: 'rounded-lg',
        },
    });
    return;
}

if (!newPassword) {
    Swal.fire({
        icon: 'warning',
        title: 'Missing Field',
        text: 'Please enter a new password.',
        background: '#fff3cd',
        color: '#856404',
        iconColor: '#856404',
        confirmButtonText: 'Okay',
        confirmButtonColor: '#ffc107',
        customClass: {
            popup: 'rounded-lg',
        },
    });
    return;
}

if (newPassword.length < 6) {
    Swal.fire({
        icon: 'error',
        title: 'Weak Password',
        text: 'New password must be at least 6 characters long.',
        background: '#f8d7da',
        color: '#721c24',
        iconColor: '#721c24',
        confirmButtonText: 'Okay',
        confirmButtonColor: '#d33',
        customClass: {
            popup: 'rounded-lg',
        },
    });
    return;
}

if (newPassword !== confirmPassword) {
    Swal.fire({
        icon: 'error',
        title: 'Password Mismatch',
        text: 'New password and confirm password do not match!',
        background: '#f8d7da',
        color: '#721c24',
        iconColor: '#721c24',
        confirmButtonText: 'Okay',
        confirmButtonColor: '#d33',
        customClass: {
            popup: 'rounded-lg',
        },
    });
    return;
}

        fetch('/changepass',{
            method:'PATCH',
            headers:{
                'Content-Type':'application/json'
            },
            body:JSON.stringify({
                currentPassword,newPassword
            })
        })
        .then(res=>res.json())
        .then(res=>{
            if(res.success){
                Swal.fire({
  icon: 'success',
  title: 'The password has been successfully changed',
  confirmButtonText: 'OK'
}).then(() => {
  // Close the Bootstrap modal
  const modalElement = document.getElementById('editProfileModal');
  if (modalElement) {
    const modalInstance = bootstrap.Modal.getInstance(modalElement) 
                          || new bootstrap.Modal(modalElement); // fallback
    modalInstance.hide();
  }

  // Reload the page
  window.location.reload(true);
});

            }else{
                  Swal.fire(res.message || 'Something went wrong');
            }
       })
    })
    </script>

    <!-- jQuery and Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

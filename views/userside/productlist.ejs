<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Weebs corner- Product Catalog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #244960;
        }

        .navbar {
            background-color: #5F42E8;
            padding: 15px 0;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 24px;
            color: white !important;
        }

        .nav-link {
            color: white !important;
            margin-right: 20px;
        }

        .navbar-nav .nav-item:last-child .nav-link {
            margin-right: 0;
        }

        .navbar-icons {
            display: flex;
            align-items: center;
        }

        .navbar-icons .nav-link {
            padding: 0 10px;
        }

        .breadcrumb {
            background-color: transparent;
            padding: 1rem 0;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, .1);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .icon-hover:hover {
            color: #007bff !important;
        }
        .bgcolors{
            background-color: #dedede;
        }
        .cart-count {
            position: absolute;
            top: -8px;
            right: -8px;
            background: #FF3366;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
    
.bg-gradient {
  background: linear-gradient(to right, #9333ea, #4f46e5);
}

</style>
<link rel="stylesheet" href="/css/homepage.css">

</head>

<body>
    <header class="bg-gradient text-white shadow">
        <nav class="navbar navbar-expand-md p-0 navbarbg">
            <div class="container-sm">
                <a class="navbar-brand fs-4 fw-bold" href="/">WeebsCorner</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar container-fluid" id="navbarNav">
                    <ul class="navbar-nav p-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/product">All Products</a>
                        </li>
                       
                    </ul>
                    <div class="d-flex">
                        <a href="/wishlist" class="btn btn-link text-white me-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                            </svg>
                        </a>
                        <a href="/user/mydash" class="btn btn-link text-white me-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                            </svg>
                        </a>
                        <a href="/cart" class="text-white hover:text-gray-200 transition relative">
                            <i class="fas fa-shopping-cart text-xl"></i>
                            <% if(cartcount>=0){ %>
                            <span class="cart-count"><%= cartcount %></span>
                            <% } %>
                        </a>
                     
                    </div>
                </div>
            </div>
        </nav>
    </header>



    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active text-dark" aria-current="page">Product</li>
            </ol>
        </nav>

        <div class="row bg">
            <div class="col-lg-3">
                <div class="card mb-4 bgcolors">
                    <div class="card-body">
                        <h5 class="card-title">Filters</h5>
                        <hr>
                        <div class="mt-4">
                            <input type="text" id="searchInput" class="form-control" placeholder="Search by name...">
                        </div>
                        <br>

                        <form id="filterForm" action="/product" method="GET">
                            <h6 class="mb-3">Categories</h6>
                            <div class="mb-3">
                                <input type="radio" name="category" value="all" id="all">
                                    <label for="all"> All</label>
                                <% categories.forEach((cate)=> { %>
                                    <% if(cate.list) { %>
                                        <div class="form-check">
                                            
                                            <input class="form-check-input" type="radio" name="category"
                                                value="<%= cate.name %>" id="<%= cate.name %>">
                                            <label class="form-check-label" for="<%= cate.name %>">
                                                <%= cate.name %>
                                            </label>
                                        </div>
                                        <% } %>
                                            <% }) %>
                                    
                            </div>
                          

                  
                            <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 ">
                <div class="card bgcolors mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="mb-0">Products</h5>
                            <div>
                                <form id="sortForm">
                                    <select class="form-select" name="sort">
                                        <option value=" ">Sort By</option>
                                        <option value="priceLowToHigh">Price: Low to High</option>
                                        <option value="priceHighToLow">Price: High to Low</option>
                                        <option value="averageRating">Average Ratings</option>
                                        <option value="featured">Featured</option>
                                        <option value="newArrivals">New Arrivals</option>
                                        <option value="aToZ">A-Z</option>
                                        <option value="zToA">Z-A</option>
                                    </select>
                                </form>
                            </div>
                        </div>
                        <div class="row productlist">
                            <% products.forEach((product) => { %>
                                <% if (!product.unlist) { %>
                                    <div class="col-md-6 col-lg-4 mb-4">
                                        <div class="card h-100">
                                            <img src="<%= product.images[0] %>" class="card-img-top" alt="<%= product.name %>">
                                            <div class="card-body d-flex flex-column">
                                                <h5 class="card-title"><%= product.name %></h5>
                                                <div class="mt-auto">
                                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                                        <div>
                                                            <span class="fs-4 fw-bold text-primary">₹<%=product.dealprice %></span>
                                                            <span class="text-muted text-decoration-line-through ms-2">₹<%= product.price.toFixed(2) %></span>
                                                        </div>
                                                        <span class="badge bg-success">
                                                            <% if(product.offtype=='fixed'){%>
                                                               FLAT <%= product.price-product.dealprice%>₹ OFF
                                                                <% }else{%>
                                                                   <%= Math.round(( (product.price-product.dealprice)/product.price)*100 ) %>% OFF
                                                                <% } %>
                                                         
                                                        </span>
                                                    </div>
                                                    <a href="/product/<%= product._id %>" class="btn btn-outline-primary w-100">View Details</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                            <% }) %>
                        </div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <% if (pagination.currentPage> 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" data-page="<%= pagination.currentPage - 1 %>"
                                            aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                    <% } %>
                                        <li class="page-item disabled">
                                            <span class="page-link">Page <%= pagination.currentPage %> of <%=
                                                        pagination.totalPages %></span>
                                        </li>
                                        <% if (pagination.currentPage < pagination.totalPages) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="#"
                                                    data-page="<%= pagination.currentPage + 1 %>" aria-label="Next">
                                                    <span aria-hidden="true">&raquo;</span>
                                                </a>
                                            </li>
                                            <% } %>
                            </ul>
                        </nav>



                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        // sortForm
    document.addEventListener('DOMContentLoaded', function () {
    const filterForm = document.getElementById('filterForm');
    const sortForm = document.getElementById('sortForm');
    const paginationLinks = document.querySelectorAll('.pagination .page-link');
    const searchInput = document.getElementById('searchInput');

    function getUrlParams() {
        return new URLSearchParams(window.location.search);
    }

    function updateQueryString(formData) {
        const params = new URLSearchParams(formData);
        return params.toString();
    }

    function applyFiltersAndSort(page = null, search = null) {
        const filterData = new FormData(filterForm);
        const sortData = new FormData(sortForm);
        const currentParams = getUrlParams();

        filterData.set('limit', currentParams.get('limit') || '6');

        const currentSort = currentParams.get('sort');
        if (currentSort && !sortData.get('sort')) {
            sortData.set('sort', currentSort);
        }

        // Retain current search if not provided
        if (search === null && currentParams.has('search')) {
            search = currentParams.get('search');
        }
        if (search) {
            filterData.set('search', search);
        }

        if (page) {
            filterData.append('page', page);
        }

        const queryString = updateQueryString(filterData) + '&' + updateQueryString(sortData);
        window.location.href = `${window.location.pathname}?${queryString}`;
    }

    filterForm.addEventListener('submit', function (e) {
        e.preventDefault();
        applyFiltersAndSort();
    });

    sortForm.querySelector('select[name="sort"]').addEventListener('change', function () {
        applyFiltersAndSort();
    });

    paginationLinks.forEach(link => {
        link.addEventListener('click', function (e) {
            e.preventDefault();
            const page = this.getAttribute('data-page');
            applyFiltersAndSort(page);
        });
    });

    function debounce(func, delay) {
        let timeout;
        return function (...args) {
            clearTimeout(timeout);
            timeout = setTimeout(() => func.apply(this, args), delay);
        };
    }

    const handleSearch = debounce((e) => {
        applyFiltersAndSort(null, e.target.value);
    }, 600);

    searchInput.addEventListener('input', handleSearch);

    // Restore filter and sort values from URL parameters
    const urlParams = getUrlParams();
    urlParams.forEach((value, key) => {
        const element = filterForm.elements[key] || sortForm.elements[key];
        if (element) {
            if (element.type === 'radio') {
                element.checked = (element.value === value);
            } else if (element.type === 'checkbox') {
                element.checked = (value === element.value);
            } else {
                element.value = value;
            }
        }
    });

    if (urlParams.has('search')) {
        searchInput.value = urlParams.get('search');
    }
});

    </script>   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>